<div>
  <h1 class="hero-text">A QR code to <span id="hero-statement"/></h1>
</div>

<script>
  new TypeIt("#hero-statement", {
    speed: 75,
    waitUntilVisible: true,
    loop: true,
  }).type('be discovered.', {delay: 3000})
    .delete(14)
    .type('be seen.')
    .pause(3000)
    .delete(8)
    .type('be heard.')
    .pause(3000)
    .delete(9)
    .type('be followed.')
    .pause(15000)
    .delete(12)
    .go();
</script>
